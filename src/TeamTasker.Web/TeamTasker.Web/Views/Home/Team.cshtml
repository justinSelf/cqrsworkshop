@{
    ViewBag.Title = "Team";
}

<h2>Team</h2>

<div class="container form-group">
    <div class="row">
        <label>Name:</label> <input type="text" name="name" value="" data-bind="value: newTeamMemberName" /> <button class="btn btn-success" data-bind="click: addTeamMember">Add Team Member</button>
    </div>
</div>

<h2>Team Members</h2>
<div class="container" data-bind="foreach: teamMembers">
    <div class="row">
        <div class="team-member col-lg-2"><span class="team-member-name" data-bind="text: name"></span></div>
    </div>
</div>

@section Scripts{
    <script src="../../Scripts/app/team.viewmodel.js"></script>
}